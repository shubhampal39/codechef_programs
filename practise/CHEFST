#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define l long
int main()
{
    
    int t;
    cin>>t;
    while(t--)
    {
        ll n1,n2,m,i;
        cin>>n1>>n2>>m;
        ll x = (m*(m+1))/2;
        if(n1>=x && n2>=x)
        {
            cout<<n1+n2-2*x<<"\n";
        }
        else
        {
            cout<<n1+n2 - 2*min(n1,n2)<<"\n";
        }
    }
}
